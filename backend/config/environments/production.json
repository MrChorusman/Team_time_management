{
  "environment": "production",
  "debug": false,
  "testing": false,
  "port": "${PORT}",
  
  "database": {
    "provider": "supabase",
    "connection_type": "pooler",
    "poolclass": "NullPool",
    "pool_pre_ping": true,
    "pool_recycle": 300,
    "connect_args": {
      "options": "-c default_transaction_isolation=read_committed"
    }
  },
  
  "frontend": {
    "url": "https://team-time-management.vercel.app",
    "allowed_domains": [
      "team-time-management.vercel.app",
      "team-time-management-*.vercel.app"
    ]
  },
  
  "api": {
    "base_path": "/api",
    "timeout": 30000,
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 60
    }
  },
  
  "google_oauth": {
    "mock_mode": false,
    "button_text": "Continuar con Google",
    "scopes": [
      "openid",
      "email",
      "profile"
    ],
    "strict_discovery": true
  },
  
  "email": {
    "mock_mode": false,
    "log_emails": false,
    "suppress_send": false,
    "use_tls": true
  },
  
  "logging": {
    "level": "INFO",
    "console_output": true,
    "file_output": true,
    "sql_echo": false,
    "log_rotation": {
      "enabled": true,
      "max_bytes": 10485760,
      "backup_count": 5
    }
  },
  
  "security": {
    "csrf_enabled": true,
    "session_cookie_secure": true,
    "session_cookie_httponly": true,
    "session_cookie_samesite": "Lax",
    "force_https": true,
    "hsts_enabled": true,
    "hsts_max_age": 31536000
  },
  
  "cors": {
    "additional_origins": [
      "https://team-time-management.vercel.app",
      "https://team-time-management-miguels-projects-dcbd8c7f.vercel.app"
    ]
  },
  
  "features": {
    "enable_debug_toolbar": false,
    "enable_profiling": false,
    "enable_sql_logging": false,
    "enable_request_logging": false,
    "enable_performance_monitoring": true
  },
  
  "monitoring": {
    "sentry_enabled": false,
    "metrics_enabled": true,
    "health_check_path": "/api/health"
  }
}
