{
  "app_name": "Team Time Management",
  "version": "1.0.0",
  "api_version": "v1",
  
  "pagination": {
    "employees_per_page": 20,
    "holidays_per_page": 50,
    "default_page_size": 20,
    "max_page_size": 100
  },
  
  "cors": {
    "allowed_origins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:5173"
    ],
    "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowed_headers": ["Content-Type", "Authorization"],
    "expose_headers": ["Content-Length"],
    "max_age": 3600
  },
  
  "session": {
    "type": "filesystem",
    "permanent": false,
    "use_signer": true,
    "key_prefix": "team_time:",
    "lifetime_hours": 24
  },
  
  "security": {
    "registerable": true,
    "confirmable": true,
    "recoverable": true,
    "trackable": true,
    "changeable": true,
    "password_min_length": 8,
    "password_require_special": false
  },
  
  "email": {
    "templates_folder": "templates/emails",
    "default_sender_name": "Team Time Management"
  },
  
  "logging": {
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "log_directory": "logs"
  },
  
  "external_apis": {
    "nager_date_api_url": "https://date.nager.at/api/v3"
  },
  
  "file_upload": {
    "max_content_length_mb": 16,
    "upload_folder": "uploads",
    "allowed_extensions": ["jpg", "jpeg", "png", "gif", "pdf", "doc", "docx", "xls", "xlsx"]
  }
}
