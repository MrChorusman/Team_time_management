# ===========================================
# CONFIGURACIÓN DE TEAM TIME MANAGEMENT
# ===========================================

# Configuración básica de Flask
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Configuración de Supabase PostgreSQL
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_DB_PASSWORD=your-database-password
SUPABASE_HOST=db.your-project.supabase.co
SUPABASE_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres.your-project

# Configuración de base de datos local (fallback)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/team_time_management

# ===========================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# ===========================================

# Configuración SMTP - Gmail (recomendado)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Configuración SMTP - SendGrid (alternativa)
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Configuración SMTP - Outlook (alternativa)
# MAIL_SERVER=smtp-mail.outlook.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@outlook.com
# MAIL_PASSWORD=your-password
# MAIL_DEFAULT_SENDER=your-email@outlook.com

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Flask-Security
SECURITY_PASSWORD_SALT=your-salt-here

# ===========================================
# CONFIGURACIÓN DE GOOGLE OAUTH
# ===========================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Para producción, cambiar a:
# GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# ===========================================
# CONFIGURACIÓN DE REDIS
# ===========================================

# Redis para sesiones y caché
REDIS_URL=redis://localhost:6379/0

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

LOG_LEVEL=INFO

# ===========================================
# INSTRUCCIONES DE CONFIGURACIÓN
# ===========================================

# 1. Copia este archivo como .env
# 2. Configura las variables según tu entorno
# 3. Para Gmail, usa una "App Password" en lugar de tu contraseña normal
# 4. Para SendGrid, obtén tu API Key desde el dashboard
# 5. Nunca subas el archivo .env al repositorio
